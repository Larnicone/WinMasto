        <DataTemplate x:Name="FollowNotificationDataTemplate">
            <Grid MaxWidth="700" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                </Grid.RowDefinitions>
                <Grid Padding="0,0,0,10" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <uwp:FontAwesome HorizontalAlignment="Right"
                        Icon="StreetView" />
                    <Grid Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Padding="5,0,5,0" HorizontalAlignment="Stretch" Text="{Binding Converter={StaticResource FollowYouConverter}}" />
                    </Grid>
                </Grid>
                <Grid Padding="60,0,0,15" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image VerticalAlignment="Top" Height="50" Source="{Binding Account.AvatarUrl}"/>
                </Grid>
                <Rectangle Grid.Row="2" Height="1" VerticalAlignment="Top" Fill="Gray"/>
            </Grid>
        </DataTemplate>

