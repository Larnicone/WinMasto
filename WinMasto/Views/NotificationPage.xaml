                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding Status, Converter={StaticResource SpoilerOrNSFWTextConverter}}"/>
